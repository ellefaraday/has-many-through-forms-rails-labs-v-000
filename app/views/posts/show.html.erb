<h1><%=@post.title%></h1>
Categories: <%=@post.categories.each do |category|%>
<%=category.name%>
<%end%>
<p><%=@post.content%></p>
Comments:
<%=@post.comments.each do |comment|%>
  <p><%=comment.content%></p>
<%end%>
Users:
<%=@post.users.uniq.each do |user|%>
  <%= link_to user.username, user_path(user)%>
<%end%>

<%=form_for post.comment.build do |f|%>
<%=f.label :comment_content%>
<%=f.text_area :comment_content%>
